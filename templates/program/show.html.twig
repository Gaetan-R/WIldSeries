{% extends 'base.html.twig' %}
{% block title %}Série : {{ program.title }}{% endblock %}

{% block content %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <span><a class="ref-show" href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}">|Saison {{ season.number }}|</a> </span>

            {% else %}
                Aucune saison disponible
            {% endfor %}
            <div class="actor">
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a class="ref-show" href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a> </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
                <a class="ref-return" href="{{ path('program_index') }}">
                    Retour à la liste des programmes
                </a>
            </div>
        </div>
    </div>
{% endblock %}